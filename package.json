{
  "name": "firestore-security-rules-lsp",
  "displayName": "Firestore Security Rules LSP",
  "description": "LSP Extension for the Firebase Firestore Security Rules language",
  "version": "0.2.1",
  "repository": {
    "url": "https://github.com/JulindM/firestore-rules-lsp-vscode"
  },
  "icon": "./firestore-lsp-logo.png",
  "engines": {
    "vscode": "^1.95.0"
  },
  "publisher": "julindm",
  "categories": [
    "Programming Languages"
  ],
  "author": {
    "name": "Julind Mara",
    "email": "marajulind@outlook.com"
  },
  "activationEvents": [
    "onLanguage:firestore-rules"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && node esbuild.js --production"
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": false,
      "description": "If the workspace is untrusted, disable the extension to avoid potential code execution exploits"
    }
  },
  "contributes": {
    "languages": [
      {
        "id": "firestore-rules",
        "aliases": [
          "firestore-rules"
        ],
        "extensions": [
          ".rules"
        ]
      }
    ]
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.6",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.1",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.7.7",
    "get-port-please": "^3.1.2",
    "vscode-languageclient": "^9.0.1"
  }
}
